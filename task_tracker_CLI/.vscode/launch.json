{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": ["add", "new task"],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "${workspaceFolder}/scr/task_tracker.exe",
      "program": "${workspaceFolder}/scr/task_tracker.exe",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
